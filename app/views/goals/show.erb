<div class="col-md-4 col-md-offset-4">


  <h2 class="text-center">Goal: <h5 class="text-center"><%=@goal.name%></h5></h2>

  <h4 class="text-center">Description: <h5 class="text-center"><%=@goal.description%></h5></h4>

  <h4 class="text-center">Deadline: <h5 class="text-center"><%=@goal.deadline%></h5> </h4>

<div class="col-md-6 col-md-offset-3">
  <a class="btn btn-default" href="/goals/<%=@goal.id%>/edit">Edit Goal</a>
  <a class="btn btn-default" href="/goals/<%=@goal.id%>/delete">Delete </a>  </div>

  <br></br>
  <br>

  <h3 class="text-center">Plans </h4>
   <%@goal.plans.each do |plan|%>
     <h5 class="text-center"><%=plan.name%></h5>
     <h5 class="text-center"><%=plan.description%></h5>
     <h5 class="text-center"><%=plan.completed_by%></h5>
     <div class="col-md-6 col-md-offset-4">
       <a href="/plans/<%=plan.id%>/edit">Edit plan</a>
      <a href="/plans/<%=plan.id%>/delete">Delete</a>
     </div>
     <br></br>
  <%end%>
    <br>
<div class="col-md-4 col-md-offset-4">
  <a class="btn btn-default" href="/plans/new">Add New Plan</a>
</div>
</div>
